<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dzm.ffmpeg.MainActivity">

    <TextView
        android:id="@+id/title_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAME VERSION : "
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="guess what?"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/title_version"
        app:layout_constraintBottom_toBottomOf="@+id/title_version"
        app:layout_constraintStart_toEndOf="@+id/title_version"/>

    <Button
        android:id="@+id/convert_pcm_2_mp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PCM to MP3"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/title_version"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
