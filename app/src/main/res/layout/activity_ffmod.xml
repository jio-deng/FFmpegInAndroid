<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/btn_copy"
            android:text="copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_voice_orign"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_voice_orign"
            android:scaleType="fitXY"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_copy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_voice_loli"/>

        <ImageView
            android:id="@+id/iv_voice_loli"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_voice_loli"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@+id/iv_voice_orign"
            app:layout_constraintStart_toEndOf="@+id/iv_voice_orign"
            app:layout_constraintEnd_toStartOf="@+id/iv_voice_man"/>

        <ImageView
            android:id="@+id/iv_voice_man"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_voice_man"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@+id/iv_voice_orign"
            app:layout_constraintStart_toEndOf="@+id/iv_voice_loli"
            app:layout_constraintEnd_toStartOf="@+id/iv_voice_goast"/>

        <ImageView
            android:id="@+id/iv_voice_goast"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_voice_goast"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@+id/iv_voice_orign"
            app:layout_constraintStart_toEndOf="@+id/iv_voice_man"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
